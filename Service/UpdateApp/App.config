<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
	</configSections>

	<connectionStrings>
		<add name="local" connectionString="server=(local);database=reallysimple;uid=sa;pwd=Passw0rd"/>
	</connectionStrings>

	<log4net>
		<appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
			<param name="File" value="log.txt" />
			<param name="AppendToFile" value="true" />
			<param name="RollingStyle" value="Size" />
			<param name="DatePattern" value="yyyy.MM.dd" />
			<param name="MaximumFileSize" value="10MB" />
			<param name="StaticLogFileName" value="false" />
			<param name="CountDirection" value="1" />
			<param name="MaxSizeRollBackups" value="5" />
			<layout type="log4net.Layout.PatternLayout,log4net">
				<conversionPattern value="[%utcdate] %message%newline" />
			</layout>
		</appender>

		<appender name="SmtpAppender" type="log4net.Appender.SmtpAppender">
			<param name="to" value="mrshrinkray@gmail.com" />
			<param name="from" value="mrshrinkray@gmail.com" />
			<param name="subject" value="Error with fetch service" />
			<param name="smtpHost" value="smtp.gmail.com" />
			<param name="username" value="mrshrinkray" />
			<param name="password" value="november28th2" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="[%utcdate] %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="ALL" />
			<appender-ref ref="RollingFileAppender" />
		</root>

		<!--<logger name="Default">
			<level value="ALL" />
			<appender-ref ref="SmtpAppender" />
		</logger>-->
	</log4net>
</configuration>